%h2= t "devise.invitations.new.header"
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post,  :class => "form-horizontal" } do |f|
  = devise_error_messages!
  - resource.class.invite_key_fields.each do |field|
    .control-group
      = f.label field, class: "control-label" 
      .controls
        = f.text_field field
    = f.submit I18n.t("devise.invitations.edit.submit_button"), class: 'btn btn-success'
