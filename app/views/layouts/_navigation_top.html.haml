= link_to "FireFly Panel", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
    %li
      = link_to 'Edit account', edit_user_registration_path
    %li
      = link_to 'Torrents', torrents_path
    %li
      = link_to 'Users', users_path
    %li.dropdown
      = link_to "#", class: "dropdown-toggle", data: {toggle:"dropdown"} do
        Themes
        %b.caret
      %ul.dropdown-menu#theme-selector
        %li
          = link_to "/users/switch_theme/amelia" do
            - if current_user.theme == 'amelia'
              %i.icon-ok
            Amelia
        %li
          = link_to "/users/switch_theme/cerulean" do
            - if current_user.theme == 'cerulean'
              %i.icon-ok
            Cerulean
        %li
          = link_to "/users/switch_theme/cyborg" do
            - if current_user.theme == 'cyborg'
              %i.icon-ok
            Cyborg
        %li
          = link_to "/users/switch_theme/superhero" do
            - if current_user.theme == 'superhero'
              %i.icon-ok
            Superhero
        %li
          = link_to "/users/switch_theme/united" do
            - if current_user.theme == 'united'
              %i.icon-ok
            United
  - else
    %li
      = link_to 'Sign up', new_user_registration_path
    %li
      = link_to 'Login', new_user_session_path