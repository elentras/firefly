= form_for @torrent, :html => {multipart: true}, class: "form-horizontal" do |f|
  - if @torrent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@torrent.errors.count, "error")} prohibited this torrent from being saved:"
      %ul
        - @torrent.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :user_id, value: current_user.id.to_s

  .control-group
    = f.label :file, class: "control-label", for: "input_file"
    .controls
      = f.file_field :file, id: "input_file", placeholder: "Fichier", required: ''
  .form-actions
    = f.submit 'Save', class: 'btn btn-success'
